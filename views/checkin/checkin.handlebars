<!DOCTYPE html>
<html>
<head>
    <title>Welcome</title>
    <link rel="shortcut icon" href="/images/favicon.ico" />

    {{>styles}}

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    <style>
        .header{
            color: #fcfcfc;
            margin-top: 100px;
            font-family: 'Roboto', sans-serif;
            font-weight: 700;
        }
        
        .content-wrapper{
            background: none;
        }

        .customBG {
            background: #E0E4E8;
            background-image: url("/images/random_grey_variations.png");

        }

        .checkin-btn {
           background: #071c33;
        }

        .box-primary, .box-footer {
            background-color: #fafafa;
        }

        .box-primary{
            border-top-color: #071c33 !important;
        }
        
        footer{
            position:fixed;
            bottom: 0;
        }
        
        footer .container{
            position:relative !important; 
            top: -15px !important;
        }
        
    </style>


</head>

<body class = "skin-blue customBG">
    <div class="">
        {{>header}}

        {{>sidebar-business}}
        <div class="content-wrapper">
            <!-- <div class="container container-checkin"> -->

            <h1 class ="header text-center"><strong>Welcome to {{companyName}}</strong></h1>

            <div class="row">
                <div class="col-xs-10 col-sm-6 col-md-6 col-lg-4 center-block" style="float:none; padding: 20px">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Check In</h3>
                        </div>
                        {{#if error}}
                            <div class="alert alert-danger">{{error}}</div>
                        {{/if}}
                        <div class="box-body">
                            <form method="POST">
                                <div class="form-group">
                                    <label class="control-label inputName">Name</label>
                                    <input type="name" id="inputName" name="inputName" value="{{ inputName }}" class="form-control" required autofocus>
                                </div>
                                <div class="form-group">
                                    <label class="control-label inputDOB">Phone Number</label>
                                    <input type="phone" id="inputPhone" name="inputPhone" value="{{ inputPhone }}" class="form-control" placeholder='(xxx) xxx-xxxx' required autofocus>
                                </div>

                                <div class="box-footer">
                                    <input type="submit" id="checkin" class="btn btn-lg btn-primary center-block checkin-btn" value="Check In" >
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{>footer}}

    </div>





</body>
</html>
